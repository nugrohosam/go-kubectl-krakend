{
    "version": 2,
    "name": "Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "3s",
    "host": [
        "localhost"
    ],
    "endpoints": [
        {
            "endpoint": "/health",
            "extra_config": {
                "github.com/devopsfaith/krakend/proxy": {
                    "static": {
                        "data": {
                            "status": "Fine"
                        },
                        "strategy": "always"
                    }
                },
                "github_com/devopsfaith/krakend/transport/http/server/handler": {
                    "name": [ "krakend-wildcard" ],
                    "krakend-wildcard": {
                        "endpoints": { 
                            "/wildcard/get-service": [ "/api/v1/get-service" ],
                            "/wildcard/post-service": [ "/api/v1/post-service" ]
                        }
                    }
                }
            },
            "backend": [
                {
                    "url_pattern": "/__health",
                    "host": [
                        "http://localhost:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/v1/get-service",
            "extra_config": {
                "github.com/devopsfaith/krakend-ratelimit/juju/router": {
                    "maxRate": 1,
                    "clientMaxRate": 1,
                    "strategy": "ip"
                }
            },
            "backend": [
                {
                    "host": [
                        "http://get-service"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/api/v1/post-service",
            "extra_config": {
                "github.com/devopsfaith/krakend-ratelimit/juju/router": {
                    "maxRate": 1,
                    "clientMaxRate": 1,
                    "strategy": "ip"
                }
            },
            "backend": [
                {
                    "host": [
                        "http://post-service"
                    ],
                    "url_pattern": "/"
                }
            ]
        }
    ]
}